<ol>
	{% for answer in question.answers %}
		{% if answer.author.department.id == value %}
			<img src="https://media.giphy.com/media/{{ answer.answer }}/giphy.gif" class="img-fluid" style="height: 40%;width: 40%;">
		{% endif %}
	{% endfor %}
</ol>

{% if value == null %}
	<ol>
		{% for answer in question.answers %}
			<img src="https://media.giphy.com/media/{{ answer.answer }}/giphy.gif" class="img-fluid" style="height: 40%;width: 40%;">
		{% endfor %}
	</ol>
{% endif %}