{% set counter = 0 %}
{% for answer in question.answers %}
	{% if answer.author.department.id == value %}
		{% set longueur = answer | length %}
		{% set counter = counter + answer.answer %}
		<div class="container">
			<div class="row text-center text-dark p-3">
				<div class="col-sm">
					<STRONG>{{ longueur }} réponse{% if longueur > 1 %}s{% endif %}</STRONG>
				</div>
				{% if longueur > 0 %}
					<div class="col-sm">
						<STRONG>{{ (counter/longueur) }} / 10 de moyenne</STRONG>
					</div>
				{% endif %}
			</div>
		</div>
	{% endif %}
{% endfor %}

{% if value == null %}
	{% set longueur = question.answers | length %}
	{% set counter = 0 %}
	{% for answer in question.answers %}
		{% set counter = counter + answer.answer %}
	{% endfor %}
	<div class="container">
		<div class="row text-center bg-light text-dark p-3">
			<div class="col-sm">
				<STRONG>{{ longueur }} réponse{% if longueur > 1 %}s{% endif %}</STRONG>
			</div>
			{% if longueur > 0 %}
				<div class="col-sm">
					<STRONG>{{ (counter/longueur) }} / 10 de moyenne</STRONG>
				</div>
			{% endif %}
		</div>
	</div>
{% endif %}