{% extends 'base.html.twig' %}

{% block title %}FormeSurvey &#8226; Résultat{% endblock %}

{% block body %}
	<div class="row">
	  <div class="col-sm-4">
		<h1 class="display-4">{{ survey.title }}</h1>
		<p>{{ survey.description }}</p>
		<h4>{{ survey.questions | length }} Questions</h4>
		<p>
			<small class="text-muted">
				Enquête réalisée par {{ survey.author }}, le {{ survey.createdAt | date('d/m/Y') }}
			</small>
		</p>
	  </div>
	  <div class="col-sm-8">
		{% set num = 0 %}
		{% for question in survey.questions %}
			{% set num = num + 1 %}
			<div class="card mb-1 mt-1">
			  <div class="card-body">
			    <h5 class="card-title">{{ num }}. {{ question.question }}</h5>
			    <p class="card-text">{{ question.categoryQuestion.title }}</p>
			    {% for answer in question.answers %}
			    	<p>{{ answer.answer }}</p>
			    {% endfor %}
			  </div>
			</div>
		{% endfor %}
	  </div>
	</div>

{% endblock %}
