{% extends 'base.html.twig' %}

{% form_theme formQCM 'bootstrap_4_layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

	<h1 class="display-4">{{ question.question }}</h1>

	<ul class="list-group list-group-flush">
		{% for questionMultipleChoice in question.questionMultipleChoices %}
			<li class="list-group-item list-group-item-action">{{ questionMultipleChoice.content }}</li>
		{% endfor %}
	</ul>
	<div class="m-2">
		{{ form_start(formQCM) }}

			{{ form_widget(formQCM.content, {'attr':{'placeholder':"Tapez ici une autre proposition de réponse..."}}) }}

			<button type="submit" class="btn btn-success btn-block mt-1">
				Ajouter la proposition de réponse
			</button>

		{{ form_end(formQCM) }}
	</div>


	<a href="{{ path('form_survey', {'id': question.survey.id}) }}">
		<i class="far fa-hand-point-left"></i> Retour
	</a>

{% endblock %}