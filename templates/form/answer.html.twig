{% extends 'base.html.twig' %}

{% block title %}Survey{% endblock %}

{% block body %}
	<div class="row">
	  <div class="col-sm-4">
		<h1 class="display-4">{{ survey.title }}</h1>
		<p>{{ survey.description }}</p>
		<h4>{{ survey.questions | length }} Questions</h4>
		<p>
			<small class="text-muted">
				Enquête réalisée par {{ survey.author }}, le {{ survey.createdAt | date('d/m/Y') }}
			</small>
		</p>
	  </div>
	  <div class="col-sm-8">
	  	<form action="" method="post">
			{% set num = survey.questions | length %}
				{% for question in survey.questions | reverse %}
					{% set num = num - 1 %}
					<div class="card mb-1 mt-1">
					  <div class="card-body">
					    <h5 class="card-title">{{ question.question }}</h5>
					    <h5 class="card-title">{{ num }}</h5>
					    <p class="card-text">{{ question.categoryQuestion.title }}</p>
					        <input type="text" name="question{{ num }}" value="{{ question.id }}">
					    	<input type="text" name="answer{{ num }}" placeholder="Votre réponse...">
						<p class="card-text"><small class="text-muted">{{ question.createdAt | date('d/m/Y') }}</small></p>
					  </div>
					</div>
				{% endfor %}
			<button type="submit">Enregistrer</button>
		</form>
	  </div>
	</div>

{% endblock %}
