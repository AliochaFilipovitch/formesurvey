{% extends 'base.html.twig' %}

{% form_theme surveyForm 'bootstrap_4_layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
	<h1 class="display-4">
		{% if editMode %}
			Modifier
		{% else %}
			Créer
		{% endif %}
		une enquête
	</h1>

	{{ form_start (surveyForm) }}

		{{ form_row ( surveyForm.title, {'label' : 'Titre de l\'enquête (5 caractères minimum)','attr' : {'placeholder': "Titre de l'enquête"}} ) }}
		{{ form_row ( surveyForm.description, {'label' : 'Description de l\'enquête (option)','attr' : {'placeholder': "Description de l'enquête"}} ) }}

		<button type="submit" class="btn btn-primary btn-lg btn-block">
			{% if editMode %}
				Modifier
			{% else %}
				Ajouter
			{% endif %}
		</button>

	{{ form_end (surveyForm) }}

{% endblock %}