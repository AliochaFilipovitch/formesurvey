{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<h1 class="display-4">Inscription</h1>

{{ form_start (form) }}

	{{ form_row ( form.username, {'label' : 'Prénom (5 caractères min.)','attr' : {'placeholder': "Prénom"}} ) }}
	{{ form_row ( form.email, {'label' : 'Email (10 caractères min.)','attr' : {'placeholder': "Email"}} ) }}
	{{ form_row ( form.password, {'label' : 'Mot de passe','attr' : {'placeholder': "Mot de passe"}} ) }}
	{{ form_row ( form.confirm_password, {'label' : 'Confirmation Mot de passe','attr' : {'placeholder': "Mot de passe"}} ) }}

	<button type="submit" class="btn btn-primary btn-block">
		Inscription
	</button>

{{ form_end (form) }}

{% endblock %}
